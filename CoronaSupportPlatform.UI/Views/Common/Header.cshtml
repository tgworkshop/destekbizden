<!-- page title area start -->
<div class="page-title-area">
    <div class="row align-items-center">
        <div class="col-sm-8">
            @if (Model.Breadcrumb != null)
            {
                <div class="breadcrumbs-area clearfix">
                    <h4 class="page-title pull-left">@Model.Breadcrumb.PageName</h4>
                    <ul class="breadcrumbs pull-left">
                        @foreach (var item in Model.Breadcrumb.Items)
                        {
                            if (!String.IsNullOrEmpty(item.Value))
                            {
                                <li><a href="@item.Value">@item.Key</a></li>
                            }
                            else
                            {
                                <li><span>@item.Key</span></li>
                            }
                        }
                    </ul>
                </div>
            }
            else
            {
                <div class="breadcrumbs-area clearfix">
                    <h4 class="page-title pull-left">Anasayfa</h4>
                    <ul class="breadcrumbs pull-left">
                        <li><span>/</span></li>
                    </ul>
                </div>
            }

        </div>
        <div class="col-sm-4 clearfix">
            <div class="user-profile pull-right">
                @if (User.Identity.IsAuthenticated)
                {
                    @*<img class="avatar user-thumb" src="/content/images/author/avatar.png" alt="avatar">*@
                    <h4 class="user-name dropdown-toggle" data-toggle="dropdown">@Model.CurrentUser.Firstname @Model.CurrentUser.Lastname <i class="fa fa-angle-down"></i></h4>
                    <div class="dropdown-menu">
                        @*<a class="dropdown-item" href="#">Message</a>
                            <a class="dropdown-item" href="#">Settings</a>*@
                        <a class="dropdown-item" href="/logoff">Oturumu kapat</a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
